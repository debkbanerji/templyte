{
    "rules": {
        "template-directory": {
            ".read": "auth !== null",
            "$uid":{
                ".write": "auth !== null && !data.exists()"
            },
            ".indexOn": "authorUID"
        },
        "template-render-info": {
            ".read": "auth !== null",
            "$uid":{
                ".write": "auth !== null && !data.exists()"
            }
        }
    }
}