{
    "rules": {
        "template-directory": {
            ".read": "auth !== null",
            "$uid": {
                ".write": "auth !== null && (!data.exists() || (data.child('authorUID').exists() && data.child('authorUID').val() === auth.uid))"
            },
            ".indexOn": "authorUID"
        },
        "template-render-info": {
            ".read": "auth !== null",
            "$uid": {
                ".write": "auth !== null && (!data.exists() || (root.child('template-directory/'+$uid+'/authorUID').exists() && root.child('template-directory/'+$uid+'/authorUID').val() === auth.uid))"
            }
        }
    }
}